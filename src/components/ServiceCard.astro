---
interface Props {
  service: {
    name: string;
    description: string;
    docsUrl?: string;
    referenceArchitecture?: any;
  };
}

const { service } = Astro.props;
const serviceId = service.name.toLowerCase().replace(/\s+/g, '-');
---

<div 
  class="p-4 rounded-lg bg-gray-50 hover:bg-gray-100 transition-colors cursor-pointer"
  data-service={serviceId}
  data-active="false"
>
  <h3 class="text-[#f6821f] font-medium mb-2">{service.name}</h3>
  <div class="cf-service-details" style="display:none">
    <p class="text-sm text-gray-600 mb-3">{service.description}</p>
    <div class="flex flex-col gap-2">
      {service.docsUrl && (
        <a 
          href={service.docsUrl} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-[#f6821f] text-sm font-medium hover:underline inline-flex items-center gap-1"
        >
          Learn More
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      )}
      {service.referenceArchitecture && (
        <button 
          class="text-[#f6821f] text-sm font-medium hover:underline inline-flex items-center gap-1 text-left"
          data-ref-arch-trigger={serviceId}
        >
          View Reference Architecture
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
          </svg>
        </button>
      )}
    </div>
  </div>
</div> 