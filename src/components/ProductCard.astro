---
const { image, name, price } = Astro.props;
---

<div class="flex flex-col items-center bg-white rounded-2xl shadow p-6 w-64">
  <div id="cf-image">
    <img src={image} alt={name} class="w-32 h-32 object-contain mb-4" />
  </div>
  <div class="text-lg font-semibold mb-1">{name}</div>
  <div class="text-base text-gray-700">${price}</div>
</div>

